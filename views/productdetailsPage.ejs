<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title><%= product.name %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
    />
    <link rel="stylesheet" href="/Css/styling-details.css" />
    <link rel="stylesheet" href="/Css/HeadFoot.css" />
  </head>
  <body class="minimal">
    <%- include('partials/header') %>

    <section class="Product">
      <div class="product-gallery">
        <div class="thumbnails">
          <% if (product.images && product.images.length > 0) { %> <%
          product.images.forEach((img, index) => { %>
          <img
            src="<%= img.thumb %>"
            class="thumb <%= index === 0 ? 'active' : '' %>"
            alt="Thumbnail <%= index + 1 %>"
          />
          <% }) %> <% } else { %>
          <p>No images available.</p>
          <% } %>
        </div>

        <div class="main-image">
          <% if (product.images && product.images.length > 0) { %>
          <img
            id="mainProductImage"
            src="<%= product.images[0].full %>"
            alt="Main View"
          />
          <% } else { %>
          <p>No main image available.</p>
          <% } %>
        </div>
      </div>

      <div class="pdetails">
        <h2><%= product.name %></h2>
        <p>LE <%= product.price.toLocaleString() %></p>
        <hr />
        <br /><br />

        <div class="color-options">
          <% product.colors.forEach(color => { %>
          <span
            class="color-swatch <%= color %>"
            data-color="<%= color %>"
          ></span>
          <% }) %>
        </div>

        <br />
        <button id="addToCart" onclick="toggleDetails()">Add To Cart</button>
        <br /><br />

        <div class="quantity-container">
          <button class="quantity-btn decrease-btn">-</button>
          <input type="number" class="quantity-input" value="0" min="0" />
          <button class="quantity-btn increase-btn">+</button>
        </div>

        <details>
          <summary>Details</summary>
          <p><%= product.description %></p>
        </details>
        <details>
          <summary>Shipping and Returns</summary>
          <p>
            Velora will arrange an exchange or issue a store credit within 30
            days of original purchase. All exchanges must be in the original
            condition and must be accompanied with the original packaging and
            sales slip.
          </p>
        </details>
      </div>
    </section>

    <section class="related-products">
      <h2 class="like">You May Also Like</h2>
      <div class="product-grid">
        <% relatedProducts.forEach(rp => { %>
        <div class="product-preview">
          <div class="product-spacerow">
            <a href="/product/<%= rp._id %>">
              <% if (rp.images && rp.images.length > 0) { %>
              <img src="<%= rp.images[0].full %>" alt="<%= rp.name %>" />
              <% } else { %>
              <p>No image</p>
              <% } %>
            </a>
          </div>
          <div class="product-info">
            <p class="product-name"><%= rp.name %></p>
            <p class="product-price">LE <%= rp.price.toLocaleString() %></p>
          </div>
        </div>
        <% }) %>
      </div>
    </section>

    <div id="footer"></div>
    <script src="/javasScript/color.js"></script>
    <script src="/javasScript/thumbnail.js"></script>
    <script src="/javasScript/productdetails.js"></script>
  </body>
</html>
