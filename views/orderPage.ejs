<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">
    <link rel="stylesheet" href="/Css/orderPage.css">
    <link rel="stylesheet" href="/styles/HeadFoot.css">
    <script src="/scripts/header.js" defer></script>
    <title>Checkout page</title>
</head>

<body>
  </head>

  <body>
    <div id="header"></div>

    <% if (typeof success !=='undefined' && success) { %>
    <div class="success-overlay">
      <div class="success-message"><%= message %></div>
    </div>
    <script>
      setTimeout(function () {
        window.location.href = "/";
      }, 2000);
    </script>
    <% } %>

    <div class="right">
        <h1>Shipping address</h1>
    </div>

    <form class="form" action="/order" method="POST">
        <div class="group">
            <label for="fullName">FULL NAME</label>
            <input type="text" id="fullName" name="fullName" placeholder="Your name and surname" required>
        </div>

        <div class="group">
            <label for="email">EMAIL</label>
            <input type="email" id="email" name="email" placeholder="example@example.com" required>
        </div>

        <div class="group">
            <label for="phone">PHONE NUMBER</label>
            <input type="text" id="phone" name="phone" placeholder="phone" required>
        </div>

        <div class="group">
            <label for="address">ADDRESS</label>
            <input type="text" id="address" name="address" placeholder="Address" required>
        </div>

        <div class="group">
            <label for="country">COUNTRY</label>
            <select id="country" name="country" required>
                <option value="Egypt">Egypt</option>
                <option value="Saudi">Saudi</option>
                <option value="America">America</option>
            </select>

        <!-- Card Inputs (visual only, not submitted) -->
        <div class="credit-form">
          <div class="inputBox">
            <span>Card Number</span>
            <input
              type="text"
              maxlength="16"
              class="card-number-input"
              placeholder="XXXX XXXX XXXX XXXX"
            />
          </div>
          <div class="inputBox">
            <span>Card Holder</span>
            <input
              type="text"
              class="card-holder-input"
              placeholder="Full Name"
            />
          </div>
          <div class="inputBox">
            <span>Expiration Month</span>
            <select class="month-input">
              <option value="">Month</option>
              <% for(let i=1; i <=12; i++) { let month=i.toString().padStart(2,
              '0' ); %>
              <option value="<%= month %>"><%= month %></option>
              <% } %>
            </select>
          </div>
          <div class="inputBox">
            <span>Expiration Year</span>
            <select class="year-input">
              <option value="">Year</option>
              <% const currentYear=new Date().getFullYear(); for(let i=0; i
              <=10; i++) { %>
              <option value="<%= currentYear + i %>">
                <%= currentYear + i %>
              </option>
              <% } %>
            </select>
          </div>
          <div class="inputBox">
            <span>CVV</span>
            <input
              type="text"
              maxlength="3"
              class="cvv-input"
              placeholder="123"
            />
          </div>
        </div>

        <div class="input-container">
            <div class="group">
                <label for="city">CITY</label>
                <select id="city" name="city" required>
                    <option value="cairo">Cairo</option>
                    <option value="riyadh">Riyadh</option>
                    <option value="LA">LA</option>
                </select>
            </div>

            <div class="group">
                <label for="postalCode">ZIP CODE</label>
                <input type="text" id="postalCode" name="postalCode" placeholder="123 456" required>
            </div>
        </div>

        <input type="hidden" name="generatedOrderId" value="<%= generatedOrderId || '' %>">
        <input type="hidden" name="userId" value="<%= userId || '' %>">
        <input type="hidden" name="productIds" value="<%= productIds || '' %>">
        <input type="hidden" name="totalQuantity" value="<%= totalQuantity || 0 %>">
        <input type="hidden" name="totalPrice" value="<%= totalPrice || 0 %>">
        <input type="hidden" name="paymentMethod" value="credit_card">

        <div class="back">
            <a href="/cart" class="btn btn-link">&leftarrow; Return to cart</a>
        </div>

        <div class="return">
            <div class="row">
                <div>Total Quantity:</div>
                <div class="totalQuantity">LE <%= totalQuantity || 0 %></div>
            </div>
            <div class="row">
                <div>Total Price:</div>
                <div class="total">LE <%= totalPrice || '0' %></div>
            </div>
            <button type="submit" class="buttonCheckout">Continue to payment</button>
        </div>
    </form>
</body>
</html>