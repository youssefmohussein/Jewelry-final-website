<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
    />
    <link rel="stylesheet" href="/Css/homePage.css" />
    <link rel="stylesheet" href="/Css/HeadFoot.css" />
    <link rel="stylesheet" href="/Css/chatbot.css" />
    <link
      href="https://fonts.googleapis.com/css2?family=Playwrite+NO:wght@100..400&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css?family=Audiowide|Sofia|Trirong"
    />
    <!-- <link rel="stylesheet" href="/css/chatbot.css" /> -->
    <title>Velora Jewel</title>
  </head>

  <body class="homepage">
    <%- include('partials/header') %>

    <!-- HERO VIDEO -->
    <div class="video-container">
      <video autoplay loop muted playsinline>
        <source src="/videos/header background.mp4" type="video/mp4" />
        Your browser does not support the video tag.
      </video>
    </div>

    <!-- EXPLORE SECTION -->
    <section class="content">
      <p class="Explore"><%= __('explore') %></p>
      <div class="scroll-wrapper">
        <button class="scroll-btn left" onclick="scrollLeft()">
          <i class="fas fa-chevron-left"></i>
        </button>

        <div class="product-scroll-container" id="productScroll">
          <% if (products && products.length > 0) { %> <%
          products.forEach((product, index) => { %>
          <a href="/product/<%= product._id %>" class="product-item-link">
            <div class="product-item">
              <a href="/product/<%= product._id %>">
                <img src="<%= product.imageSrc %>" alt="<%= product.name %>" />
              </a>
              <p class="product-title"><%= product.name %></p>
            </div>
          </a>
          <% }) %> <% } else { %>
          <p>No products available</p>
          <% } %>
        </div>

        <button class="scroll-btn right" onclick="scrollRight()">
          <i class="fas fa-chevron-right"></i>
        </button>
      </div>
    </section>

    <!-- MODEL SECTION -->
    <section class="model-content">
      <!--<h1 class="heading-text">The World of Velora</h1>-->
      <h1 class="heading-text"><%= __('world of velora') %></h1>

      <div class="images">
        <div class="zoom-container">
          <img
            src="/Images/homepageImg/model 1.jpg"
            alt="Model 1"
            class="video-image"
          />
        </div>
        <div class="zoom-container">
          <img
            src="/Images/homepageImg/model 2.jpg"
            alt="Model 2"
            class="video-image"
          />
        </div>
      </div>
    </section>

    <!-- COLLECTIONS -->
    <div class="container">
      <p class="collection"><%= __('collections') %></p>
      <div class="jewelry-grid">
        <div class="jewelry-item">
          <a href="/categories/rings">
            <img src="/Images/homepageImg/rings-bg.jpg" alt="Rings" />
          </a>
          <p class="name"><%= __('rings') %></p>
        </div>

        <div class="jewelry-item">
          <a href="/categories/necklace">
            <img src="/Images/homepageImg/Artful_Jade_1600x.jpg" alt="Necklace" />
          </a>
          <p class="name"><%= __('Necklace') %></p>
        </div>

        <div class="jewelry-item">
          <a href="/categories/earings">
            <img src="/Images/homepageImg/earringsss.jpg" alt="Earrings" />
          </a>
          <p class="name"><%= __('Earrings') %></p>
        </div>

        <div class="jewelry-item">
          <a href="/categories/bracelets">
            <img src="/Images/homepageImg/bracelet-bg.jpg" alt="Bracelet" />
          </a>
          <p class="name"><%= __('Bracelet') %></p>
        </div>
      </div>
    </div>

    <!-- WORKSHOP SECTION -->
    <section class="Workshop">
      <div class="container-workshop">
        <h1><%= __('velora jewel') %></h1>
        <p><%= __('quote_text') %></p>
        <div class="workshop-content">
          <img
            src="/Images/homepageImg/qoute 1 img.jpg"
            alt="Workshop"
            class="workshop-img"
          />
          <div class="workshop-text">
            <h2><%= __('workshop') %></h2>
            <p><%= __('workshop_paragraph') %></p>
          </div>
        </div>
      </div>

      <div class="workshop-content">
        <div class="workshop-text1">
          <h2><%= __('archive') %></h2>
          <p><%= __('archive_paragraph') %></p>
        </div>
        <img
          src="/Images/homepageImg/qoute 2 img.jpg"
          alt="Archive"
          class="workshop-img"
        />
      </div>
    </section>

    <!-- CHATBOT -->
    <button id="openChatBtn" class="open-chat-btn">Chat with us</button>
    <div class="chat-container" id="chatContainer">
      <div class="chat-header">
        <h3>Chatbot</h3>
        <button id="closeChatBtn" class="close-chat-btn">X</button>
      </div>
      <div class="chat-window" id="chatWindow"></div>
      <form id="chatForm">
        <input
          type="text"
          id="userInput"
          placeholder="Type a message..."
          required
        />
        <button type="submit">Send</button>
      </form>
    </div>
    <%- include('partials/footer') %>
    <script src="/javasScript/chatbot.js"></script>
  </body>
</html>
