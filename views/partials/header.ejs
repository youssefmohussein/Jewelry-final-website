<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>VELORA JEWEL</title>
    <link rel="stylesheet" href="/Css/HeadFoot.css" />
    <script
      src="https://kit.fontawesome.com/a076d05399.js"
      crossorigin="anonymous"
    ></script>
    <style>
      .top-right-container {
        display: flex;
        align-items: center;
        gap: 8px;
      }

      .language-switcher a {
        color: #333;
        text-decoration: none;
        padding: 0 6px;
        font-size: 14px;
      }
      .language-switcher a:hover {
        text-decoration: underline;
      }

      .icons {
        display: flex;
        align-items: center;
        gap: 12px;
      }
      .logout-icon-btn {
        background: none;
        border: none;
        cursor: pointer;
        color: inherit;
        font-size: 1em;
      }
    </style>
  </head>
  <body>
    <!-- NAVBAR -->
    <nav class="navbar">
      <div class="navigation">
        <!-- Shop Dropdown -->
        <div class="dropdown">
          <!--<a href="#">Shop</a>-->
          <a href="#"><%= __('shop') %></a>
          <div class="dropdown-content mega-menu">
            <div class="mega-menu-column">
              <!--<h3>Categories</h3>-->

              <a href="/categories/rings">Rings</a>
              <a href="/categories/earings">Earrings</a>
              <a href="/categories/necklace">Necklaces</a>
              <a href="/categories/bracelets">Bracelets</a>
            </div>
            <div class="mega-menu-column1">
              <img
                src="/images/Homepage/nav2.png"
                alt="Jewelry 1"
                class="menu-image"
              />
              <img
                src="/images/Homepage/nav3.png"
                alt="Jewelry 2"
                class="menu-image"
              />
            </div>
          </div>
        </div>

        <!-- Collections Dropdown -->
        <div class="dropdown">
          <a href="#"><%= __('collections') %></a>
          <div class="dropdown-content mega-menu">
            <div class="mega-menu-column">
              <h3>Collection</h3>
              <% if (collections && collections.length > 0) { %> <%
              collections.forEach(function(collection) { %>
              <a href="/collections/<%= collection.name %>">
                <%= collection.name %>
              </a>
              <% }) %> <% } else { %>
              <p>No collections available.</p>
              <% } %>
            </div>
            <div class="mega-menu-column1">
              <img
                src="/images/Homepage/nav1.png"
                alt="Jewelry 1"
                class="menu-image"
              />
              <img
                src="/images/Homepage/nav2.png"
                alt="Jewelry 2"
                class="menu-image"
              />
            </div>
          </div>
        </div>

        <!-- Static Link -->
        <!-- <a href="/about-us">About Us</a> -->
        <a href="/about-us"><%= __('about_us') %></a>
      </div>

      <!-- Logo -->
      <a href="/" class="logo">
        <h1>VELORA JEWEL</h1>
        <h2>Paris</h2>
      </a>

      <div class="top-right-container">
        <!-- Language Switcher -->
        <div class="language-switcher">
          <a href="?lang=en">English</a> | <a href="?lang=ar">العربية</a>
        </div>

        <!-- Icons -->
        <div class="icons">
          <% if (isLoggedIn && role === 'customer') { %>
          <a href="/profile"><i class="fas fa-user"></i></a>
          <form
            action="/logout"
            method="POST"
            class="logout-form"
            style="display: inline"
          >
            <button
              onclick="logout()"
              class="logout-icon-btn"
              title="Logout"
              type="submit"
            >
              <i class="fas fa-arrow-right-from-bracket"></i>
            </button>
          </form>
          <% } else { %>
          <a href="/login"><i class="fas fa-user"></i></a>
          <% } %>
          <a href="/cart"><i class="fas fa-bag-shopping"></i></a>
        </div>
      </div>
    </nav>

    <script>
      const dropdown = document.querySelector(".dropdown");

      // Get the dropdown content
      const dropdownContent = document.querySelector(".dropdown-content");

      // Show dropdown content on mouseover
      dropdown.addEventListener("mouseover", function () {
        dropdownContent.style.display = "flex"; // Show the dropdown content
      });

      // Hide dropdown content on mouseout
      dropdown.addEventListener("mouseout", function () {
        dropdownContent.style.display = "none"; // Hide the dropdown content
      });
      window.addEventListener("scroll", function () {
        const navbar = document.querySelector(".navbar");
        if (window.scrollY > 50) {
          navbar.classList.add("scrolled");
        } else {
          navbar.classList.remove("scrolled");
        }
      });
    </script>
    <script src="/javasScript/authentcation.js"></script>
  </body>
</html>

