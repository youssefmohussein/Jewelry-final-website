<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Orders</title>
    <link rel="stylesheet" href="/Css/dashboard.css" />
</head>

<body>
  <div class="sidebar">
    <h2>Velora</h2>
    <hr />
    <ul>
      <a href="/admin-dashboard/dashboard"><li>Dashboard</li></a>
      <a href="/customers-dashboard"><li>Customers</li></a>
      <a href="/orders-dashboard"><li>Orders</li></a>
      <a href="/product-dashboard"><li>Products</li></a>
    </ul>
  </div>

  <div class="main">
    <div class="top">
      <h1>Orders</h1>
    </div>

    <div class="search-container">
      <input type="text" id="search" placeholder="Search orders..." />
      <select id="status-filter">
        <option value="">All Status</option>
        <option value="pending">Pending</option>
        <option value="shipped">Shipped</option>
        <option value="delivered">Delivered</option>
      </select>
    </div>

    <div class="orders-container">
      <h2>Recent Orders</h2>
      <table class="orders-table">
        <thead>
          <tr>
            <th>Order ID</th>
            <th>Customer</th>
            <th>Products</th>
            <th>Date</th>
            <th>Amount</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (orders && orders.length > 0) { %>
            <% orders.forEach(order => { %>
              <tr data-order-id="<%= order._id %>" 
                  data-phone="<%= order.phone %>"
                  data-quantity="<%= order.quantity %>"
                  data-payment_method="<%= order.Payment_method %>"
                  data-address="<%= order.shippingAddress.address %>"
                  data-city="<%= order.shippingAddress.city %>"
                  data-state="<%= order.shippingAddress.state %>"
                  data-postalcode="<%= order.shippingAddress.postalCode %>"
                  data-country="<%= order.shippingAddress.country %>">
                <td><%= order.orderId %></td>
                <td><%= order.user?.name || "Unknown" %></td>
                <td>
                  <% if (order.product_ids && order.product_ids.length > 0) { %>
                    <% order.product_ids.forEach((product, i) => { %>
                      <%= product.name %><%= i < order.product_ids.length - 1 ? ", " : "" %>
                    <% }) %>
                  <% } else { %>
                    No products
                  <% } %>
                </td>
                <td><%= order.orderDate.toDateString() %></td>
                <td>$<%= order.total_price.toFixed(2) %></td>
                <td><span class="status-<%= order.status.toLowerCase() %>"><%= order.status %></span></td>
                <td>
                  <button class="btn edit-btn">Edit</button>
                  <button class="btn delete-btn">Delete</button>
                </td>
              </tr>
            <% }); %>
          <% } else { %>
            <tr><td colspan="7">No orders found.</td></tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Edit Order Modal -->
  <div id="editOrderModal" class="modal">
    <div class="modal-content order-form-modal">
      <h2>Edit Order</h2>

      <form id="editOrderForm" novalidate>
        <div class="form-grid">
          <!-- Row 1: Order ID (disabled) + Customer Name -->
          <div class="double">
            <label for="editOrderId">Order ID</label>
            <input type="text" id="editOrderId" disabled />
          </div>
          <div class="double">
            <label for="editCustomerName">Customer Name</label>
            <input type="text" id="editCustomerName" required />
          </div>

          <!-- Row 2: Product(s) + Quantity -->
          <div class="double">
            <label for="editProducts">Product(s)</label>
            <input type="text" id="editProducts" required />
          </div>
          <div class="double">
            <label for="editQuantity">Quantity</label>
            <input type="number" id="editQuantity" required min="1" />
          </div>

          <!-- Row 3: Total Price + Status -->
          <div class="double">
            <label for="editTotalPrice">Total Price</label>
            <input type="number" id="editTotalPrice" required min="0" step="0.01" />
          </div>
          <div class="double">
            <label for="editStatus">Status</label>
            <select id="editStatus" required>
              <option value="Pending">Pending</option>
              <option value="Processing">Processing</option>
              <option value="Shipped">Shipped</option>
              <option value="Delivered">Delivered</option>
              <option value="Cancelled">Cancelled</option>
            </select>
          </div>

          <!-- Row 4: Shipping Address -->
          <div class="full">
            <label for="editAddress">Shipping Address</label>
            <textarea id="editAddress" maxlength="250" required></textarea>
          </div>
        </div>

        <div class="form-buttons">
          <button type="submit" class="btn save-btn">Save Changes</button>
          <button type="button" class="btn cancel-btn" id="closeModalBtn">Cancel</button>
        </div>
      </form>
    </div>
  </div>


    <script src="/javasScript/orderManagment.js"></script>
</body>

</html>
