<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/Css/dashboard.css" />
  </head>
  <body>
    <div class="sidebar">
      <h2>Velora</h2>
      <hr />
      <ul>
        <a href="/dashboard"><li>Dashboard</li></a>
        <a href="/customers-dashboard"><li>Customers</li></a>
        <a href="/orders-dashboard"><li>Orders</li></a>
        <a href="/product-dashboard"><li>Products</li></a>
           <li>
    <button onclick="logout()" class="logout-btn">Logout</button>
  </li>
    </div>

    <div class="main">
      <div class="top">
        <h1>Customer Dashboard</h1>
      </div>
      <div class="search-bar">
        <input type="text" id="searchInput" placeholder="Search products..." onkeyup="searchTable()" />
      </div>
      <div class="cards">
        <div class="card">
          <h3>New Users</h3>
          <p><%= users.length %></p>
          <!-- Displaying the number of users dynamically -->
        </div>
      </div>

      <!-- Users Table -->
      <div class="table">
       <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Password</th>
        <th>Role</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach(user => { %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td>**********</td>
          <td><%= user.role %></td>
         <td>
  <button 
    class="edit-btn"
    data-user='<%- JSON.stringify(user).replace(/'/g, "&#39;") %>'
    onclick="handleUserEdit(this)">Edit Role</button>

  <button 
  class="delete-btn"
  data-user='<%- JSON.stringify(user).replace(/'/g, "&#39;") %>'
  onclick="handleUserDelete(this)">Delete</button>
</td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <!-- Edit User Role Modal -->
  <div id="editUserModal" class="modal" style="display:none;">
  <div class="modal-content">
    <h2>Edit User Role</h2>
    <input type="hidden" id="editUserId" />
    <p>Email: <span id="editUserEmail"></span></p>
    <label for="editUserRole">Role</label>
    <select id="editUserRole">
      <option value="customer">Customer</option>
      <option value="admin">Admin</option>
    </select>

    <div class="form-buttons">
      <button onclick="submitUserEdit()">Save</button>
      <button onclick="closeUserModal()">Cancel</button>
    </div>
  </div>
</div>



    <!-- Include JavaScript file -->
      <script src="/javasScript/authentcation.js"></script>
  </body>
</html>
